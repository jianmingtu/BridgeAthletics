@using Athletes.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}


<div class="login-page">
    @section Head{
        <style>
            .navigation-bar {
                display: none;
            }

            body {
                padding-top: 0;
                padding-bottom: 0;
            }
        </style>
    }
    <div class="login-img-logo">
        <a href="/">
            <img src="~/Content/Images/logo_black.png" />
        </a>
    </div>
    <div class="login-overlay">

        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4 class="login-title"> Welcome Back</h4>
                <div class="login-title-underline"></div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group mt-4">
                    @Html.TextBoxFor(m => m.Email, new { @class = "register-input ", placeholder = "Email Address" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.Password, new { @class = "register-input", placeholder = "Password" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <div class="form-group p-0 m-0">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox login-remember">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="login-button-container">
                        <input type="submit" class="btn btn-default  login-submit-button" value="Log in" />
                    </div>

                </div>
                <p class="login-page-register-link">
                    <span> Don't have an account? </span> @Html.ActionLink("Register here", "Register")
                </p>
                @* Enable this once you have account confirmation enabled for password reset functionality
                    <p>
                        @Html.ActionLink("Forgot your password?", "ForgotPassword")
                    </p>*@
            }
        </section>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
@using Microsoft.AspNet.Identity
@*@model Athletes.Models.Athlete*@
<!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Bridge Athletics</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @if (!IsSectionDefined("Head"))
        {
            <style>
                .navigation-bar {
                    display: block;
                }
            </style>
        }
        else
        {
            @RenderSection("Head", required: true)
        }
        <script src="https://kit.fontawesome.com/62c16d6b1a.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navigation-bar">
            <div class="container-fluid">
                <a href="/" class="navbar-brand">
                    <img alt="BA logo" id="BA-logo" src="@Url.Content("~/Content/Images/logo_black.png")" width="160">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        @*@if (User.Identity.AuthenticationType)*@
                        
                        <li class="nav-item">
                            <a class="nav-link" href="/Athlete/Browse">Browse</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Athlete">My Profile</a>
                        </li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </nav>
        <div class="container-fluid p-0">
            @RenderBody()
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8" crossorigin="anonymous"></script>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")

        <!-- Load React. -->
        <script src="https://unpkg.com/react@17/umd/react.production.min.js" crossorigin="anonymous"></script>
        <script src="https://unpkg.com/react-dom@17/umd/react-dom.production.min.js" crossorigin="anonymous"></script>

        @RenderSection("scripts", required: false)
    </body>
</html>
